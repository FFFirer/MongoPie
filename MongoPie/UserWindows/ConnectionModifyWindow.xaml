<Window x:Class="MongoPie.UserWindows.ConnectionModifyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MongoPie"
        mc:Ignorable="d"
        Title="编辑连接" Height="450" MinHeight="450" Width="240" MinWidth="240">
    <Grid>
        <StackPanel Name="LoginInfo">
            <Label>连接名称</Label>
            <TextBox Margin="5" Name="txtConnectinName"></TextBox>
            <Label>服务器地址</Label>
            <TextBox Margin="5" Name="txtServerAddress"></TextBox>
            <Label>端口</Label>
            <TextBox Margin="5" Name="txtServerPort"></TextBox>
            <Label>用户名</Label>
            <TextBox Margin="5" Name="txtUserName"></TextBox>
            <Label>密码</Label>
            <PasswordBox local:PasswordBoxHelper.Attach="True" Margin="5" Name="txtPasswd"></PasswordBox>
            <Label>数据库名称</Label>
            <TextBox Margin="5" Name="txtDbName"></TextBox>
            <Button Margin="5" Name="btnTestLogin" Click="btnTestLogin_Click">测试连接</Button>
            <Button Margin="5" Name="btnSave" Click="btnSave_Click">保存</Button>
            <Button Margin="5" Name="btnCancel" Click="btnCancel_Click">取消</Button>
        </StackPanel>
    </Grid>
</Window>
